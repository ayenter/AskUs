extends ./layout.jade

block tabs

  //
    li(role='presentation')
      a(href='/') New
    li(role='presentation')
      a(href='/travel') Travel
    li(role='presentation')
      a(href='/food') Food
    li(role='presentation')
      a(href='/entertainment') Entertainment       
    li(role='presentation')
      a(href='/relationship') Relationship   
    li(role='presentation')
      a(href='/career') Career      
    li(role='presentation')
      a(href='/life') Life
    li(role='presentation')
      a(href='/other') Other

  if db.tabs != 0
    each tab in db.tabs
      li(role='presentation')
        a(href='/' + tab) #{tab}

block content
  hr

  -console.log(activeTab)

  if db.questions != 0
    each q in db.questions
      .row
        .col-lg-12
          .panel.panel-default
            .panel-heading.clearfix
              .pull-left
                //PROFILE PIX img.img-responsive.user-photo.img-circle(src='img/sea.jpg')
                span
                  strong #{q.author} 
                span.text-muted #{q.time}
              .pull-right
                a#comments.btn.btn-xs.btn-warning.btn-circle.text-uppercase(href='/question/#{q.qid}')
                  span.glyphicon.glyphicon-comment Comments: #{q.responses.length} 
            a(href='/question/#{q.qid}')
              .panel-body
                p.question #{q.question}